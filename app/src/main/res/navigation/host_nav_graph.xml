<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.samtasks.ui.fragments.welcome.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/welcome_fragment">
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:exitAnim="@anim/scale_out"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_authActivity"
            app:destination="@id/authActivity"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.samtasks.ui.fragments.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_welcomeFragment2"
            app:destination="@id/welcomeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createTaskFragment"
            app:destination="@id/createTaskFragment"
            app:enterAnim="@anim/slide_in_from_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_bottom" />
    </fragment>

    <activity
        android:id="@+id/authActivity"
        android:name="com.example.samtasks.ui.activities.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />

    <fragment
        android:id="@+id/createTaskFragment"
        android:name="com.example.samtasks.ui.fragments.create_edit.CreateTaskFragment"
        android:label="CreateTaskFragment"
        tools:layout="@layout/create_task_fragment" />


</navigation>