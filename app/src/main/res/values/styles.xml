<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.MaterialComponents.Headline4.AuthTitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/jacques_francois</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">@dimen/auth_title_top_margin</item>
        <item name="android:layout_marginStart">@dimen/auth_title_start_margin</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.AuthInputStyle">

        <item name="android:layout_marginEnd">@dimen/auth_edit_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/auth_edit_top_margin</item>

    </style>

    <style name="TextAppearance.MaterialComponents.Headline6.TextButton">

        <item name="android:textSize">14sp</item>

    </style>

    <style name="auth_button">

        <item name="cornerRadius">100dp</item>
        <item name="android:layout_marginStart">@dimen/auth_button_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_button_horizontal_margin</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="date_indicator">

        <item name="android:layout_height">@dimen/date_indicator_height</item>
        <item name="android:layout_width">@dimen/date_indicator_width</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:translationY">25dp</item>
        <item name="android:background">@drawable/circle_shape</item>
        <item name="android:layout_marginStart">@dimen/date_indicator_margin</item>

    </style>

</resources>