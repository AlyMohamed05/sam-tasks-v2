<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        tools:layout="@layout/welcome_fragment"
        android:id="@+id/welcomeFragment"
        android:name="com.example.samtasks.ui.fragments.welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_authActivity"
            app:destination="@id/authActivity"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        tools:layout="@layout/home_fragment"
        android:id="@+id/homeFragment"
        android:name="com.example.samtasks.ui.fragments.home.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_welcomeFragment2"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <activity
        android:id="@+id/authActivity"
        android:name="com.example.samtasks.ui.activities.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />

</navigation>